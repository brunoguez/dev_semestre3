<h1 class="text-center p-3">Lista de posts</h1>
<div class="text-center pb-4">
    <button type="button" class="btn btn-success" onclick="window.location.href = '/cad';"><i class="fas fa-plus-circle"
            style="margin-right: 7px;"></i>Novo Post</button>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Conteúdo</th>
            <th scope="col">Data Criação</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <th class="align-middle" scope="row">{{id}}</th>
            <td class="align-middle">{{titulo}}</td>
            <td class="align-middle">{{conteudo}}</td>
            <td class="align-middle">{{formatDate createdAt}}</td>
            <td class="align-middle">
                <button type="button" class="btn btn-success" onclick="window.location.href = '/alterar/{{id}}';"><i
                        class="fa fa-edit"></i></button>
                <button type="button" class="btn btn-danger" onclick="window.location.href = '/deletar/{{id}}';"><i
                        class="fa fa-trash-alt"></i></button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>